---
import Container from "../shared/Container.astro";
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-7xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow divide-x divide-box-border grid grid-cols-2 md:grid-cols-5 gap-4 sm:gap-8 md:gap-6 lg:gap-12" >
      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          +350
        </h2>
        <p class="mt-2 text-heading-3">Projetos Criados</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          +200
        </h2>
        <p class="mt-2 text-heading-3">Projetos Empresariais</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          +150
        </h2>
        <p class="mt-2 text-heading-3">Empresas colaboradoras</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          100%
        </h2>
        <p class="mt-2 text-heading-3">Projetos Entregues</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          +1M
        </h2>
        <p class="mt-2 text-heading-3">Visualizações Geradas</p>
      </div>

    </div>
  </Container>
</section>
